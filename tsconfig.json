{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "paths": {
            "@/account/*"   : ["./resources/js/modules/account/*"],
            "@/auth/*"      : ["./resources/js/modules/auth/*"],
            "@/hr/*"        : ["./resources/js/modules/hr/*"],
            "@/*"           : ["./resources/js/*"],
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}